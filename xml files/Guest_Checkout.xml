					<include name="configurableAddToCartProductDetailPage"></include>
				</methods>
			</class>
		</classes>
	</test>
	 <test name="Guest Checkout">
		<classes>
			<class name="Frontend_Testcases.GuestCheckout"/>
		</classes>
	</test> 
	
</suite> 